<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#808080</item>
        <item name="colorControlActivated">#808080</item>
    </style>
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog" >
        <!--設定背景透明框-->
        <item name="android:windowNoTitle">true</item>
        <!--設定tile背景-->
        <item name="android:topDark">@color/colorWhite</item>
        <!--設定content背景-->
        <item name="android:centerDark">@color/colorWhite</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

</resources>
